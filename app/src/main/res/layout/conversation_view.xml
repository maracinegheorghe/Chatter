<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#7EBBB7BC"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewConversationTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#455FD6AF"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLastMessageSender"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textViewLastMessageContent"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewLastMessageTimestamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>